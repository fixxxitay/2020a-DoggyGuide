<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="180sp"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#FFFFFE"
    tools:context=".homeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:src="@mipmap/dog_walking_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:padding="2dp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/line_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:layout_toStartOf="@id/get_alarm"
            android:layout_toLeftOf="@id/get_alarm"
            android:textColor="#A74A35"
            android:textStyle="bold|italic"
            android:padding="8sp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/line_1"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/get_alarm"
            android:layout_toLeftOf="@id/get_alarm"
            android:textColor="#E9D8D8"
            android:textStyle="italic"
            android:padding="8sp"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/get_alarm"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:backgroundTint="#FFFFFE"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_alarm" />
    </RelativeLayout>



</androidx.cardview.widget.CardView>