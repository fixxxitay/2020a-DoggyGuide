<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="8sp"
    android:layout_marginStart="8sp"
    android:layout_marginEnd="8sp"
    app:cardBackgroundColor="#FFFFFE"
    app:cardCornerRadius="10dp"
    tools:context=".users.UsersActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image_id"
            android:layout_width="55sp"
            android:layout_height="55sp"
            android:src="@mipmap/dog_home_screen"/>


        <TextView
            android:id="@+id/user_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_image_id"
            android:layout_marginLeft="8sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="18sp"
            android:text="@string/display_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_status_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name_id"
            android:layout_toRightOf="@id/user_image_id"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="6sp"
            android:textSize="14sp"
            android:text="@string/status" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>